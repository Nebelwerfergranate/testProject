<script type="text/template" id="sb_login_template">
    <form class="form-horizontal" data-selector="login-form" method="post">
        <p class="hide text-danger" data-selector="form-error-message"></p>
        @Html.AntiForgeryToken()
        <h4>Use a local account to log in.</h4>
        <div class="form-group">
            <label class="col-md-2 control-label">Login</label>
            <div class="col-md-10">
                <input type="text" name="login" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Password</label>
            <div class="col-md-10">
                <input type="password" name="password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="checkbox">
                    <input type="checkbox" value="true" name="rememberMe" />
                    <input type="hidden" value="false" name="rememberMe" />
                    Remember Me
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>

    </form>
</script>
